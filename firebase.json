{
  "hosting": {
    "public": ".next",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "function": "nextAppHandler"
      }
    ],
    "redirects": [
      {
        "source": "www.fortamazing.com",
        "destination": "https://fortamazing.com",
        "type": 301
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "runtime": "nodejs18",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm run build",
        "mkdir -p \"$RESOURCE_DIR\"/.next/server",
        "cp .next/BUILD_ID functions/.next/BUILD_ID",
        "cp -r .next/standalone \"$RESOURCE_DIR\"",
        "cp -r .next/static \"$RESOURCE_DIR\"/.next/static",
        "cp .next/server/pages-manifest.json \"$RESOURCE_DIR\"/.next/server/"
      ]
    }
  ],
  "storage": {
    "rules": "storage.rules"
  }
}
